{
  "name": "sample-ui-plugin",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "build": "yarn clean && yarn build:client && yarn build:node",
    "build:client": "webpack --config webpack.config.js",
    "build:node": "tsc --project tsconfig.node.json",
    "clean": "rimraf dist"
  },
  "composer": {
    "bundles": [
      {
        "id": "publish",
        "path": "dist/publish.js"
      },
      {
        "id": "page",
        "path": "dist/page.js"
      }
    ],
    "contributes": {
      "views": {
        "publish": {
          "bundleId": "publish"
        },
        "page": {
          "bundleId": "page",
          "label": "Sample UI Plugin"
        }
      }
    }
  },
  "extendsComposer": true,
  "description": "Publish using custom UI",
  "main": "dist/index.js",
  "dependencies": {
    "@bfc/client-plugin-lib": "file:../../packages/extensions/client-plugin-lib",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "html-webpack-plugin": "^4.3.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.0",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
