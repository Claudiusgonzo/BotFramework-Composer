{
  "name": "tony-publish",
  "version": "1.0.0",
  "scripts": {
    "build:ui": "webpack --config webpack.config.js && webpack --config webpack-page.config.js",
    "build:node": "tsc --project tsconfig.node.json"
  },
  "composer": {
    "bundles": [
      {
        "id": "publish",
        "path": "dist/bundle.js"
      },
      {
        "id": "page",
        "path": "dist/page.js"
      }
    ],
    "contributes": {
      "views": {
        "publish": {
          "bundleId": "publish"
        },
        "page": {
          "bundleId": "page",
          "label": "Tony Publish"
        }
      }
    }
  },
  "extendsComposer": true,
  "description": "Publish bot to somewhere!",
  "main": "dist/index.js",
  "dependencies": {
    "@bfc/client-plugin-lib": "file:../../packages/extensions/client-plugin-lib",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "html-webpack-plugin": "^4.3.0",
    "ts-loader": "^8.0.0",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
